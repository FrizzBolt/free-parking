<div class="container">
  <p>Invite your friends to this group!</p>

  <%= form_for @invite, url: invites_path do |f| %>
    <%= f.hidden_field :grouping_id, value: @invite.grouping_id %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.submit "Send Invite", class: 'button color-5' %>
  <% end %>
</div>
