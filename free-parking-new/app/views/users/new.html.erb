<div class="container">
  <%= form_for(@user) do |f| %>
    <p>Create a new account.</p>
    <% if @token != nil %>
      <%= hidden_field_tag :invite_token, @token %>
    <% end %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit %>
  <% end %>
  <%= link_to "Back", root_path %>
</div>
